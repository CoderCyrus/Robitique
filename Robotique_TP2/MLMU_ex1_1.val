edit MLMU1.version1
; Matthieu LAMIELLE et Muruo WANG

;inputs
part.det.P1 = 1004
part.det.P2 = 1005
part.det.R2 = 1008
part.det.R1 = 1007

;output
conveyor.start = 1
conveyor.stop = -1
conveyor.g = -2
conveyor.d = 2

signal 5
tool succion.pad

;Tool check
openi 

;Debut
move wait.loc

;On vérifie qu'une pièce est en place
wait sig(part.det.P1) or sig(part.det.P2)

;On regarde où est située la pièce à prendre
if sig(part.det.P1)then
  set P=P1
else
  set P=P2
end

;On va la chercher
appro P, 100
moves P
closei
departs 50

;On la pose sur le tapis
appro place,50
moves place
openi
departs 100

;On le fait partir vers la droite
signal(conveyor.d)
signal(conveyor.start)

;Dès que la pièce est au detector 2 on stop le tapis
wait sig(part.det.R2)
signal(conveyor.stop)

;On attend
timer 1 = 0
wait timer(1) > 1

;On redémarre dans l'autre sens
signal(conveyor.g)
signal(conveyor.start)

;Quand la pièce est au detector 1 on stop le tapis
wait sig(part.det.R1)
signal(conveyor.stop)

;On prend la pièce sur le tapis (à detector 1)
appro grasp.loc.stopped, 100
moves grasp.loc.stopped
closei
departs 50

;On pose la pièce en P3
appro P3,50
moves P3
openi
departs 100

move wait.loc

e

load pickconv.lc
load alltools.v2
