edit MLMU1.version2
; Matthieu LAMIELLE et Muruo WANG

;inputs
part.det.P1 = 1004
part.det.P2 = 1005
part.det.R2 = 1008
part.det.R1 = 1007

;output
conveyor.start = 1
conveyor.stop = -1
conveyor.g = -2
conveyor.d = 2

signal 5
tool succion.pad

;Tool check
openi 

speed 30 always
speed 100 mmps always

;Debut
move wait.loc

;On vérifie qu'une pièce est en place
wait sig(part.det.P1) or sig(part.det.P2)

;On regarde où est située la pièce à prendre
if sig(part.det.P1)then
  set P=P1
else
  set P=P2
end

;On va la chercher
appro P, 100
moves P
closei
departs 50

;On la pose sur le tapis
appro place,50
moves place
openi
departs 100

;On place le robot en attente
appro grasp.loc.stopped, 150

;On fait partir le tapis vers la droite
signal(conveyor.d)
signal(conveyor.start)

;Dès que la pièce est au detector 2 on commence le timer
wait sig(part.det.R2)
timer 1 = 0
wait timer(1) > 3

;On redémarre dans l'autre sens après un delais de 1s
signal(conveyor.stop)
signal(conveyor.g)
timer 1 = 0
wait timer(1) > 1
signal(conveyor.start)

;On remet le timer à 0 au passaage du detector 2
wait sig(part.det.R2)
timer 1 = 0

;Quand la pièce est au detector 1 on calcule la vitesse
wait sig(part.det.R1)
vitesse = 700/timer(1)
speed (vitesse*sqrt(2)) mmps

;On prend la pièce sur le tapis (à detector 1)
set grasp.loc.mov = shift(grasp.loc.stopped by 0, 150, 0)
openi
moves grasp.loc.mov
closei
departs 50

;On pose la pièce en P3
appro P3,50
moves P3
openi
departs 100

move wait.loc

e

load pickconv.lc
load alltools.v2
